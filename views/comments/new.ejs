<%- include("../partials/header") %>
<div class="container">		
	<div class="jumbotron">
		<h1 class="center">Add a comment to <%= campground.name %></h1>
		<div class="centerForms">
			<form method='POST' action='/campgrounds/<%= campground._id %>/comments'>
				<div class="form-group">
					<input class='form-control' type='text' placeholder='your comment' name='comment[text]'>
				</div>
				<div class="form-group">
					<button class='btn btn-primary btn-block'>Submit</button>
				</div>
			</form>
			<a href='/'>Go back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>
